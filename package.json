{
  "private": true,
  "name": "material-demo",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Electron Preact Material Design",
  "homepage": "./",
  "main": "electron/main.js",
  "build": {
    "appId": "com.liudonghua.material-demo",
    "files": [
      "build/**/*",
      "electron/*"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s preact-serve || npm run -s preact-dev",
    "preact-build": "preact build",
    "preact-serve": "preact build && preact serve",
    "preact-dev": "preact watch",
    "lint": "eslint src",
    "dev": "nf start",
    "electron": "electron .",
    "fixup": "node baseFixup.js",
    "build": "cross-env NODE_ENV=production npm run preact-build && cross-env NODE_ENV=production electron-builder",
    "pack": "electron-builder --dir",
    "dist": "cross-env NODE_ENV=production electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^3.0.6",
    "electron-builder": "^20.29.0",
    "electron-builder-squirrel-windows": "^20.30.0",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0",
    "uglifyjs-webpack-plugin": "^1.2.7"
  },
  "dependencies": {
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5",
    "preact-material-components": "^1.4.3"
  }
}
